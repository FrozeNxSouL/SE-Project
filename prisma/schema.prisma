generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Productt {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @map("_email")
  name  String @map("_name")
}

model User {
  id                String   @id @map("_id") @default(uuid()) @db.ObjectId
  name              String
  email             String   @unique
  hashedPassword    String
  address           String
  phone             String
  score             Int
  picture           String?
}
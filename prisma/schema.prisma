generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model products {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime? @db.Date
  description String
  imageUrl    String
  name        String
  /// Multiple data types found: Int: 14.3%, BigInt: 85.7% out of 7 sampled entries
  price       Json
  updatedAt   DateTime? @db.Date
}

model users {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  address        String
  email          String @unique
  hashedPassword String
  name           String
  phone          String
  picture        String
  score          BigInt
}

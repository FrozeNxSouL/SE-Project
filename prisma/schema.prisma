generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imageUrl    String
  name        String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [useremail], references: [email])
  useremail   String?   
  
  @@map("products")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  address        String
  email          String @unique
  hashedPassword String
  name           String
  phone          String
  picture        String
  score          Float
  products       Product[]
  
  @@map("users")
}
